WORKDIR /

RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y \
    python3 \
    curl \
    python3-pip \
    supervisor \
    pkg-config \
    libdbus-1-dev \
    libglib2.0-dev \
    cmake \
    libpq-dev \
    libcurl4-openssl-dev \
    git \
    libpcre3 \
    vim \
    libbrotli1 \
    openssl \
    expect

RUN git clone https://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@github.com/Z0DEN/node_backend.git
RUN pip3 install --upgrade pip
RUN pip3 install -r ./node_backend/files/python/req.txt
RUN mkdir /var/log/django

EXPOSE 80 443

STOPSIGNAL SIGTERM

CMD git -C /node_backend/ pull && \
    supervisord -c /node_backend/files/conf/supervisor.conf
